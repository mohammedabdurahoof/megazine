
<div class="wrapper fadeInDown">
  <div id="formContent">
    <!-- Tabs Titles -->

    <!-- Icon -->
    <div class="fadeIn first">
      <img src="http://danielzawadzki.com/codepen/01/icon.svg" id="icon" alt="Icon" />
    </div>

    <!-- Login Form -->
    <form action="/admin/login" method="POST">
    {{#if error}}
    <p style="color: red;">{{error}}</p>
    {{/if}}
      <input type="text" id="login" class="inp fadeIn second" name="username" placeholder="User Name">
      <input type="password" id="password" class="inp fadeIn third" name="password" placeholder="Password">
      <input type="submit" class="inp fadeIn fourth" value="Log In">
    </form>

    <!-- Remind Passowrd -->
    <div id="formFooter">
      <a class="atag underlineHover" href="#">Forgot Password?</a>
    </div>

  </div>
</div>