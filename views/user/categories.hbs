
    <div class="site-section">
      <div class="container">
        <div class="row">
          <div class="col-lg-9">
            <div class="section-title">
              <span class="caption d-block small">Categories</span>
              <h2>{{name}}</h2>
            </div>
            

            {{#each category}}
            <div class="post-entry-2 d-flex">
              <div class="thumbnail " style="background-image: url('/images/post/post-thumbnails/medium_{{this._id}}.jpg')"></div>
              <div class="contents ml-5 pl-0">
                <h2><a href="/readPost/{{this._id}}">{{data.title}}</a></h2>
                <p class="mb-3 limited-letter">{{data.article}}</p>
                <div class="post-meta">
                 <span class="d-block"><a href="/readPost/{{this._id}}">{{this.data.aouther}}</a> in <a href="/category/{{this.data.category}}">{{this.data.category}}</a></span>
                  <span class="date-read">{{this.date}}<span class="icon-star2"></span></span>
                </div>
              </div>
            </div>
            {{/each}}
           
          </div>
          <div class="col-lg-3">
            <div class="section-title">
              <h2>Popular Posts</h2>
            </div>
            {{#each popularPosts}}
            <div class="trend-entry d-flex">
              <div class="number align-self-start">0{{count @index}}</div>
              <div class="trend-contents">
                <h2><a href="/readPost/{{this._id}}">{{this.data.title}}</a></h2>
                <div class="post-meta">
                  <span class="d-block"><a href="/readPost/{{this._id}}">{{this.data.aouther}}</a> in <a href="/category/{{this.data.category}}">{{this.data.category}}</a></span>
                  <span class="date-read">{{this.date}}<span class="icon-star2"></span></span>
                </div>
              </div>
            </div>
            {{/each}}
            
            
            <p>
              <a href="/allposts" class="more">See All Post <span class="icon-keyboard_arrow_right"></span></a>
            </p>
          </div>
        </div>

        <div class="row">
          <div class="col-lg-6">
            <ul class="custom-pagination list-unstyled">
              <li><a href="#">1</a></li>
              <li class="active">2</li>
              <li><a href="#">3</a></li>
              <li><a href="#">4</a></li>
            </ul>
          </div>
        </div>
      </div>
    </div>